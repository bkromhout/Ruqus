<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.bkromhout.ruqus.RQVCard
            android:id="@+id/queryable_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:rqv_card_mode="Outline"
            app:rqv_outline_text="@string/choose_queryable_prompt"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/queryable_type"
            android:layout_above="@+id/sort_type"
            android:scrollbars="vertical">

        <LinearLayout
                android:id="@+id/rqv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.bkromhout.ruqus.RQVCard
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rqv_card_mode="Outline"
                    app:rqv_outline_text="@string/add_condition"/>
        </LinearLayout>
    </ScrollView>

    <com.bkromhout.ruqus.RQVCard
            android:id="@id/sort_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:rqv_card_mode="Outline"
            app:rqv_outline_text="@string/choose_sort_order_prompt"/>
</RelativeLayout>