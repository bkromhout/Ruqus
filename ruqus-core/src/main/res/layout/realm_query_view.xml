<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
            android:id="@+id/mainCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

        <com.bkromhout.ruqus.RQVCard
                android:id="@+id/queryable_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:rqv_card_mode="Outline"
                app:rqv_outline_text="@string/choose_queryable_prompt"/>

        <ScrollView
                android:id="@+id/rqv_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/queryable_type"
                android:layout_above="@+id/sort_type"
                android:scrollbars="vertical">

            <LinearLayout
                    android:id="@+id/rqv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
        </ScrollView>

        <com.bkromhout.ruqus.RQVCard
                android:id="@id/sort_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:rqv_card_mode="Outline"
                app:rqv_outline_text="@string/choose_sort_fields_prompt"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/builderCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"/>
</merge>